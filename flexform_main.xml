			</TCEforms>
			<type>array</type>
			<el>
				<searchsolr.usedIndex>
					<TCEforms>
						<exclude>1</exclude>
						<label>LLL:EXT:mksearch/locallang_db.xml:plugin.mksearch.flexform.usedIndex</label>
						<config>
							<type>select</type>
			                <items type="array">
			                  <numIndex index="0" type="array">
